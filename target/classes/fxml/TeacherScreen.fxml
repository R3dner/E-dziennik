<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane fx:id="borderPane" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ediary.controllers.TeacherScreenController">
   <top>
      <HBox BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#openDiary" text="Grupy" />
            <Button mnemonicParsing="false" onAction="#openGrades" prefHeight="25.0" prefWidth="77.0" text="Oceny" />
            <Button mnemonicParsing="false" onAction="#openOptions" text="Ustawienia" />
            <Label fx:id="loginLabel" prefHeight="25.0" prefWidth="325.0" text="Zalogowano jako: ">
               <padding>
                  <Insets left="160.0" right="20.0" />
               </padding>
            </Label>
            <Button fx:id="logOutButton" mnemonicParsing="false" onAction="#logOut" prefHeight="25.0" prefWidth="70.0" text="Wyloguj" />
         </children>
      </HBox>
   </top>
   <center>
      <AnchorPane prefHeight="435.0" prefWidth="600.0" BorderPane.alignment="CENTER" />
   </center>
</BorderPane>
